{
  "packages": {
    ".": {
      "release-type": "node",
      "package-name": "secret-santa-app",
      "changelog-sections": [
        { "type": "feat", "section": "Features" },
        { "type": "fix", "section": "Bug Fixes" },
        { "type": "perf", "section": "Performance Improvements" },
        { "type": "docs", "section": "Documentation" },
        { "type": "chore", "section": "Miscellaneous" },
        { "type": "refactor", "section": "Code Refactoring" },
        { "type": "test", "section": "Tests" },
        { "type": "build", "section": "Build System" },
        { "type": "ci", "section": "Continuous Integration" }
      ],
      "release-as": "1.0.0",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "draft": false,
      "prerelease": false,
      "include-v-in-tag": true,
      "versioning": "default"
    }
  },
  "changelog-path": "CHANGELOG.md",
  "pull-request-title-pattern": "chore${scope}: release${component} ${version}",
  "pull-request-header": "## Release Please\n\nThis PR was automatically generated by Release Please. It updates the version and changelog based on [Conventional Commits](https://www.conventionalcommits.org/).",
  "separate-pull-requests": false,
  "group-pull-request-title-pattern": "chore: release ${version}",
  "changelog-type": "github",
  "release-labels": ["autorelease: pending"],
  "label": "autorelease: published"
}