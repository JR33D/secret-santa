{
	"name": "secret-santa-app",
	"version": "1.4.1",
	"description": "Family Secret Santa application with Node.js and SQLite",
	"private": true,
	"scripts": {
		"dev": "next dev -p 3000",
		"build": "next build",
		"start": "next start -p 3000",
		"lint": "eslint . --ext .js,.jsx,.ts,.tsx",
		"lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"clean": "rimraf .next coverage build && echo 'Cleaned build artifacts!'",
		"clean:packages": "rimraf package-lock.json node_modules && echo 'Cleaned package artifacts!'",
		"test": "jest --runInBand",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage --i --runInBand",
		"test:ci": "jest --ci --coverage --maxWorkers=2"
	},
	"dependencies": {
		"bcryptjs": "^3.0.3",
		"dotenv": "^17.2.3",
		"next": "16.1.1",
		"next-auth": "^4.24.13",
		"node-fetch": "^3.3.2",
		"nodemailer": "^7.0.12",
		"react": "19.2.3",
		"react-dom": "19.2.3",
		"sqlite": "^5.1.1",
		"sqlite3": "^5.1.7"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4.1.18",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.2",
		"@testing-library/user-event": "^14.6.1",
		"@types/bcryptjs": "^3.0.0",
		"@types/jest": "^30.0.0",
		"@types/node": "^25.0.10",
		"@types/node-fetch": "^2.6.13",
		"@types/nodemailer": "^7.0.9",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.0",
		"autoprefixer": "^10.4.23",
		"babel-plugin-react-compiler": "1.0.0",
		"eslint": "^9.39.2",
		"eslint-config-next": "16.1.5",
		"eslint-config-prettier": "^10.1.8",
		"jest": "^30.2.0",
		"jest-environment-jsdom": "^30.2.0",
		"postcss": "^8.5.6",
		"prettier": "^3.8.1",
		"rimraf": "^6.1.2",
		"tailwindcss": "^4.0.0",
		"ts-jest": "^29.4.6",
		"typescript": "^5.9.3",
		"undici": "^7.19.1",
		"whatwg-fetch": "^3.6.20"
	}
}
