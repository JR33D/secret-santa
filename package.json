{
	"name": "secret-santa-app",
	"version": "1.2.0",
	"description": "Family Secret Santa application with Node.js and SQLite",
	"private": true,
	"scripts": {
		"dev": "next dev -p 3000",
		"build": "next build",
		"start": "next start -p 3000",
		"lint": "next lint",
		"lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"clean": "rimraf .next coverage build && echo 'Cleaned build artifacts!'",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage --i --runInBand",
		"test:ci": "jest --ci --coverage --maxWorkers=2"
	},
	"dependencies": {
		"bcryptjs": "^3.0.3",
		"dotenv": "^17.2.3",
		"next": "^14.2.33",
		"next-auth": "^4.24.13",
		"nodemailer": "^7.0.10",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"sqlite": "^5.1.1",
		"sqlite3": "^5.1.6"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4.1.16",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/bcryptjs": "^3.0.0",
		"@types/jest": "^30.0.0",
		"@types/node": "24.10.0",
		"@types/nodemailer": "^7.0.2",
		"@types/react": "19.2.2",
		"autoprefixer": "^10.4.14",
		"eslint": "8.46.0",
		"eslint-config-next": "14.0.0",
		"jest": "^30.2.0",
		"jest-environment-jsdom": "^30.2.0",
		"postcss": "^8.4.23",
		"prettier": "^3.0.0",
		"rimraf": "^6.1.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.6.2",
		"whatwg-fetch": "^3.6.20"
	}
}
